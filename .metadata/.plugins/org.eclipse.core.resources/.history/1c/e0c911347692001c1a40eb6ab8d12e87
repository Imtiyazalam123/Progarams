package com.imtiyaz;

public class Factorial {

	public static void main(String[] args) {
		
	/*	int n = 5;
		int f = 1;
		while (n > 0) {
			f = f * n;
			n--;
		}
		System.out.println(f);
		System.out.println(factorial(4));
	} */
	System.out.println(factorial(0));
	
	//using recursion
	public static int factorial(int n) {
		
		if(n == 0) {
			return 1;
		}	
		n = n * factorial(n-1);
		return n;
	}
}
